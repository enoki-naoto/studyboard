<div class="wrapper-stanard text-left">
  <div class="container container-standard">
    <div class="row">
      <div class="col-md-offset-2 col-md-8">
        <h1 class="text-white text-center margin40"><%= @question.title %></h1>
      </div>
      <div class="col-md-offset-1 col-md-10 col-md-offset-1">
        <h2 class="text-white text-left">内容</h2>
        <h3 class="text-white text-left margin40">&nbsp;&nbsp;<%= @question.content %></h3>
        <h2 class="text-white text-left">回答</h2>
        <ol class="text-white">
          <% @question.answers.each do|answer|%>
            <li class="margin20">
              <%= answer.ans %>
              <% if logged_in? %>
                <%= "@" %>
                <%= answer.user.name %>
              <% end %>
            </li>
          <% end %>
        </ol>
          <div class=" col-md-offset-4 col-md-4 col-md-offset-4 text-center">
            <% if logged_in? %>
              <%= link_to 'この質問に回答する',new_category_question_answer_path(category_id: @question.category_id, question_id: @question.id),class: 'btn btn-block btn-white' %>
            <% end %>
          </div>
       </div>
     </div>
  </div>
</div>