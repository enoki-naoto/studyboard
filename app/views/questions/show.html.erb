<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="topic-index-single">
          <br>
          <br>
          <br>
          <h1>質問詳細</h1>
          <h2 class="topic-author">
            <%= @question.title %>
            <br>
            <%= @question.content %>
            <br>
            <p>回答</p>
            <% @question.answers.each do|answer|%>
              <%= answer.ans %>
            <% end %>
            <%= link_to 'この質問に回答する',new_question_answer_path(question_id: @question.id),class: 'btn btn-block btn-black' %>
          </h2>
        </div>
      </div>
     </div>
  </div>
</div>