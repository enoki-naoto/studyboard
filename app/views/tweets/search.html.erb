<div class="topic-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="topic-index-single">
          <br>
          <br>
          <br>
          <h1>ツイート</h1>
          <h2 class="topic-author">
            <% @tweets.each do|tweet| %>
              <%= tweet.text %>
               @
              <%= tweet.user.name%>
              &nbsp;
              <% if tweet.user_id == current_user.id %>
                <%= link_to '削除', tweet_path(id: tweet.id),method: :delete %>
              <% end %>
              <br>
            <% end %>
          </h2>
        </div>
      </div>
    </div>
  </div>
</div>