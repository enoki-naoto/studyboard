<div class="top-tweet-add-form-wrapper">
  <div class="container top-tweet-add-form-container">
    <div class="row">
      <div class="col-md-offset-3 col-md-6 text-center text-white tweetNew">
        <h1>自由に発言しよう！</h1>
      </div>
      <div class="col-md-offset-3 col-md-6 ">
        <%= form_for @tweet do |f| %>
          <div class="form-group">
            <%= f.collection_select(:category_id, @category, :id, :name, :prompt => "カテゴリ選択") %>
            <%= f.text_area :text, class: 'form-control' %>
            <%= f.hidden_field :user_id, :value => current_user.id %>
          </div>
            <div class="col-md-offset-4 col-md-4">
              <%= f.submit '発言する', class: 'btn btn-black btn-block' %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>