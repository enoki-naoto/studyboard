<div class="wrapper-stanard text-left">
  <div class="container container-standard">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <%= form_for @category, method: :patch do |f| %>
          <div class="form-group text-white">
            <%= f.label "題名" %>
            <%= f.text_area :name, class: 'form-control input-sm margin20'%>
          </div>
          <div class="col-md-4 col-md-offset-4">
            <%= f.submit '更新', class: 'btn btn-block' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>