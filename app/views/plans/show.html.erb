<div class="wrapper-stanard text-white">
  <div class="container container-standard">
    <div class="row">
      <div class="col-md-offset-3 col-md-6">
        <h1 class="text-center">本日の学習目標</h1>
      </div>
      <div class="col-md-12 text-left">
        <h2><%= @plan.plandate.strftime("%Y-%m-%d") %></h2>
      </div>
      <div class="col-md-12 text-left">
        <h3>TODOリスト</h3>
      </div>
      <div class="col-md-12 text-left">
        <ol>
          <% @plan.todos.each do |todo| %>
            <li>
              <%= todo.list %>
                &nbsp;
              <%= link_to '編集',edit_plan_todo_path(plan_id: todo.plan_id,id: todo.id) %>
                &nbsp;
              <%= link_to '削除',plan_todo_path(plan_id: todo.plan_id,id: todo.id),method: :delete %>
            </li>
            <br>
          <% end %>
        </ol>
      </div>
      <% if !@plan.achieve.nil? %>
        <div class="col-md-6 col-md-offset-3 text-center nowAchieve">
          <h1><%= "本日の目標達成度：#{@plan.achieve}" %></h1>
        </div> 
      <% end %>
    </div>
  </div>
</div>